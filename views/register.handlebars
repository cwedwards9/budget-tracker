{{!-- 
New users will fill out form: 
    -first and last name 
    -reason for using app
On submit, the user will be created and redirected to login page 
--}}

<form id="createUser">
    <input id="firstNameInput" type="text" placeholder="first name">
    <input id="lastNameInput" type="text" placeholder="last name">
    <label for="reason-select">Reason for signing up</label>
    <select name="pets" id="reason-select">
        <option value="">--Please choose an option--</option>
        <option value="dog">Transactions</option>
        <option value="cat">Bills</option>
        <option value="hamster">Resources</option>
    </select>
    <button>Sign Up</button>
</form>

<script>
    // Make sure to include jQuery

    $(#createUser).on("submit", (e) => {
        e.preventDefault();

        let firstName = $(#firstNameInput).val().trim();
        let lastName = $(#lastNameInput).val().trim();

        // Validation
        if(firstName.length < 0 && lastName.length < 0) {
            alert("Please fill in a valid value for all inputs");
        }

        let newUser = {
            f_name: firstName,
            l_name: lastName
        }

        $.ajax("/register", {
            type: "POST",
            data: newUser
        }).then(() => {
            console.log("Created new user!");
        });

    });
</script>
