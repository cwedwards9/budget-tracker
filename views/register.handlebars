<div id="registerContainer">
    {{!-- <a href="/">Go Back</a> --}}

    <form id="createUser" action="/register" method="POST">
        <h1>Sign Up</h1>
        <input id="emailInput" name="email" type="email" placeholder="Email" required="required">
        <input id="passwordInput" name="password" type="password" placeholder="Password" required="required">
        <hr>
        <input id="firstNameInput" name="f_name" type="text" placeholder="First Name" required="required">
        <input id="lastNameInput" name="l_name" type="text" placeholder="Last Name" required="required">
        <input id="monthlyBudgetInput" name="budget" type="number" placeholder="Monthly Budget" required="required">
        <div>
            <button type="submit" value="Submit">Sign Up</button>
        </div>
    </form>
</div>

